@import '../const.scss';

.react-3d-form {
  font-size: 5em; // sets the main scale size
  perspective: 12em; // sets the perspective
  perspective-origin: 50% 50%;
  text-align: center;
}

.bar {
  display: inline-block;
  width: 1em;
  height: 1em;
  margin-top: 1em;
  position: relative;
  transform: rotateX(60deg); // sets the view point
  transform-style: preserve-3d; // perspective for the children

  .bar-face {
    display: inline-block;
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: rgba($light-gray, .6); // just to see what is happening
    transform-origin: 50% 100%;
    &.roof {
      transform: translateZ(1em);
    }
    &.front {
      transform: rotateX(-90deg);
    }
    &.right {
      left: auto;
      right: 0;
      width: 1em;
      transform: rotateX(-90deg) rotateY(90deg) translateX(.5em) translateZ(.5em);
    }
    &.back {
      transform: rotateX(-90deg) rotateY(0deg) translateZ(-1em);
    }
    &.left {
      width: 1em;
      transform: rotateX(-90deg)rotateY(-90deg) translateX(-.5em) translateZ(.5em);
    }

    &.percentage:before {
      content: '';
      display: block;
      position: absolute;
      bottom: 0;
      width: 0;
      height: 100%;
      margin: 0;
      background-color: rgba($red, .8);
      transition: width .6s ease-in-out;
    }
  }

  @for $i from 0 to 101 {
    &[aria-valuenow='#{$i}'] {
      .percentage:before {
        width: $i * 1%;
      }
    }
  }
}
